
{
	"spark":
	{
		"driver":{
			"memory": "16g"
		},
		"executor":{
			"memory": "16g"
		},
		"memory":{
			"fraction": "0.6",
			"offHeap":{
				"enabled": true,
				"size": "16g"
			}
		},
		"sql":{
			"shuffle":{
				"partitions": "20"
			},
			"codegen":{
				"wholeStage": false,
				"fallback": true
			},
			"broadcastTimeout": "1200"
		},
		"cleaner":{
			"referenceTracking":{
				"cleanCheckpoints": true
			}
		},
		"network":{
			"timeout": "800s"
		},
		"default":{
			"parallelism": "20",
            "cores": "8"
